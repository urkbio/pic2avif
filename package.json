{
  "name": "pic2avif",
  "version": "1.0.0",
  "description": "A GUI tool for converting common image formats to AVIF on macOS",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.pic2avif.app",
    "productName": "图片转AVIF工具",
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": ["dmg", "zip"]
    }
  },
  "keywords": [
    "image",
    "converter",
    "avif",
    "gui",
    "macos"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "sharp": "^0.32.6"
  },
  "devDependencies": {
    "electron": "^25.3.1",
    "electron-builder": "^24.6.4"
  }
}
